<div class="row">
	<div class="col-md-3">
	    <ul class="sidebar-list">
		      <li class="sidebar-item"><%=link_to "Modifica Profilo", edit_user_registration_path, class: "sidebar-link" %></li>
		      <li class="sidebar-item"><%=link_to "Richieste inviate", my_requests_path, class: "sidebar-link active" %></li>
	    </ul>
	    <br/>
	    <%= link_to "Visualizza Profilo", user_path(current_user.id), class: "btn btn-default wide" %>
  </div>


	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Richieste inviate
			</div>
			<div class="panel-body">
				
				<% @requests.each do |request| %>
					<%= link_to photographer_path(request.photographer) do %>
						<div class="row list-item">
							<div class="col-md-2">
								<%= image_tag request.photographer.photos[0].image.url(:thumb) %>
							</div>
							<div class="col-md-6">
								<h4><%= request.photographer.nome %></h4><br>
								<%= request.photographer.titolo %>
							</div>
							<div class="col-md-2 right">
								<h4>â‚¬ <%= request.total %></h4>
							</div>
							<div class="col-md-2">
								<%= request.status %> il <%= request.updated_at.strftime('%d-%m-%Y') %><br>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
