<% if @photos %>

	<div class="row">
		<% @photos.each do |photo| %>
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading preview", style="overflow: hidden">
						<%= image_tag photo.image.url(:medium), class: "img-responsive img-list"%>
					</div>
					<div class="panel-body">
						<span class="pull-right">
							<%= link_to photo, remote: true, method: :delete do %>
								<i class="fa fa-times fa-lg"></i>
							<% end %>
						</span>
					</div>
				</div>
			</div>
		<% end %>
	</div>

<% end %>