<script type="text/javascript" src='validate.js'></script>
<div class="panel panel-default">
	<div class="panel-heading">
		I tuoi dati
	</div>
	<div class="panel-body">


		<%= form_for @photographer, html: {multipart: true} do |f| %>
			<div class="container">

				<!-- Info base -->
				<div class="row">
					<div class="form-group">
						<label>Titolo (obbligatorio)</label>
						<%= f.text_field :titolo, autofocus: true, class: "form-control", placeholder: "Cattura l'attenzione in 140 caratteri" %>
					</div>
					<div class="form-group">
						<label>Descrizione (obbligatorio)</label>
						<%= f.text_area :descrizione, rows: 7, cols: 25, class: "form-control", placeholder: "Descrivi più nel dettaglio la tua attività. Quali servizi offri? Cosa ti distingue dalla concorrenza? Perché i promessi sposi dovrebbere sceglierti? Non è consentito includere i tuoi dati di contatto (numero di telefono, email, sito web, etc.)" %>
					</div>
					<div class="form-group">
						<label>Indirizzo (obbligatorio)</label>
						<%= f.text_field :indirizzo, class: "form-control", placeholder: "Dove ti trovi?" %>
					</div>
					<div class="form-group">
						<label>Gestione imprevisti (obbligatorio)</label>
						<%= f.text_area :imprevisti, rows: 3, cols: 25, class: "form-control", placeholder: "Come ti comporti in caso di imprevisti?" %>
					</div>
					<div class="form-group">
						<label>Tempi di consegna (obbligatorio)</label>
						<%= f.text_field :tempi_consegna, class: "form-control", placeholder: "Dopo quanti mesi di solito consegni il lavoro completo?" %>
					</div>
					<div class="form-group">
						<label>Numero di foto</label>
						<%= f.text_field :num_foto, class: "form-control", placeholder: "Quante foto consegni?" %>
					</div>
					<div class="form-group">
						<label>Durata del video</label>
						<%= f.text_field :durata_video, class: "form-control", placeholder: "Quanto dura il video che consegni?" %>
					</div>
				</div>

				<!-- Prezzi servizi -->
				<div class="row">
					<div class="form-group">
						<label>Foto della cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :foto_cerimonia, class: "form-control", placeholder: "Quanto chiedi per le foto della cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Video della cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :video_cerimonia, class: "form-control", placeholder: "Quanto chiedi per il video della cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Foto pre-cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :foto_pre, class: "form-control", placeholder: "Quanto chiedi per le foto pre-cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Video pre-cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :video_pre, class: "form-control", placeholder: "Quanto chiedi per il video pre-cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Foto post-cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :foto_post, class: "form-control", placeholder: "Quanto chiedi per le foto post-cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Video post-cerimonia</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :video_post, class: "form-control", placeholder: "Quanto chiedi per il video post-cerimonia?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Fotografo addizionale</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :second_camera, class: "form-control", placeholder: "Quanto chiedi per la presenza di un fotografo addizionale?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Cameraman addizionale</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :second_videocamera, class: "form-control", placeholder: "Quanto chiedi per la presenza di un cameraman addizionale?" %>
						</div>
					</div>
				</div>

				<!-- Prezzi prodotti -->
				<div class="row">
					<div class="form-group">
						<label>Album fotografico</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :album, class: "form-control", placeholder: "Quanto chiedi per la consegna di un album fotografico?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Mini album fotografico</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :mini_album, class: "form-control", placeholder: "Quanto chiedi per la consegna di un mini album fotografico?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Consegna HD via web</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :foto_hd, class: "form-control", placeholder: "Quanto chiedi per la consegna del lavoro in HD via web?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Consegna negativi</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :negativi, class: "form-control", placeholder: "Quanto chiedi per la consegna dei negativi?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Consegna HD su dvd</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :dvd, class: "form-control", placeholder: "Quanto chiedi per la consegna del lavoro in HD su dvd o blue-ray?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Realizzazione trailer fotografico</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :trailer_foto, class: "form-control", placeholder: "Quanto chiedi per la realizzazione di un trailer con le foto scattate?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Realizzazione trailer video</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :trailer_video, class: "form-control", placeholder: "Quanto chiedi per la realizzazione di un trailer con le clip video registrate?" %>
						</div>
					</div>
					<div class="form-group">
						<label>Drone</label>
						<div class="input-group">
							<div class="input-group-addon">€</div>
							<%= f.text_field :drone, class: "form-control", placeholder: "Quanto chiedi per effettuare riprese aeree con l'ausilio di un drone?" %>
						</div>
					</div>
				</div>

				<div class="row">
						<div class="form-group">
							<span class="btn btn-default btn-file btn-block">
								<i class="fa fa-cloud-upload fa-lg"></i> Carica Foto (obbligatorio)
								<%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>
						</div>
					</div>
				</div>

				<div id="photos"><%= render 'photos/list' %></div>

				<div class="actions">
        			<%= f.submit "Salva", :class => "btn btn-primary btn-block" %>
      			</div>



			

			</div>
		<% end %>
	</div>
</div>
