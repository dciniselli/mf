<div class="row">
	<div class="col-md-3">
		<div class="center">
			<%= image_tag avatar_url(@user), class: "avatar-full" %>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">Identificazione</div>
			<div class="panel-body">
				Email<br/>
				Telefono
			</div>
		</div>
	</div>
	<div class="col-md-9">
		<h2><%= @user.nome %></h2>
		<div class="description row-space-3">
			<%= @user.descrizione %>
		</div>
	</div>
</div>